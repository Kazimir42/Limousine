{% extends 'base.html.twig' %}

{% block cath1 %}Investissement{% endblock %}
{% block h1 %}Edit{% endblock %}

{% block body %}


    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Edit <a href="{{ path('investissement_view', {'id': investissement.id}) }}">{{ investissement.name }}</a> </h3>
            </div>
            <div class="card-body">
                {{ form_start(investEditForm) }}
                <div class="form-group mb-3 ">
                    <label class="form-label">Name</label>
                    <div>
                        {{ form_widget(investEditForm.name, {'attr': {'class': 'form-control'}}) }}
                        <small class="form-hint">Description to write</small>
                    </div>
                </div>
                <div class="form-group mb-3 ">
                    <label class="form-label">Type</label>
                    <div>
                        {{ form_widget(investEditForm.type, {'attr': {'class': 'form-control'}}) }}
                        <small class="form-hint">Description to write</small>
                    </div>
                </div>
                <div class="form-group mb-3 ">
                    <label class="form-label">Risk</label>
                    <div>
                        {{ form_widget(investEditForm.risk, {'attr': {'class': 'form-select'}}) }}
                    </div>
                </div>
                <div class="form-group mb-3 ">
                    <label class="form-label">Devise</label>
                    <div>
                        {{ form_widget(investEditForm.devise, {'attr': {'class': 'form-select'}}) }}
                    </div>
                </div>
                <div class="form-footer">
                    <button class="btn btn-primary">Edit</button>
                </div>
                {{ form_end(investEditForm) }}
            </div>
        </div>
    </div>



{% endblock %}

{% block title %}{{ parent() }} | Home{% endblock %}