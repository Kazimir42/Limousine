{% extends 'base.html.twig' %}

{% block cath1 %}Investissement{% endblock %}
{% block h1 %}View{% endblock %}

{% block body %}


    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">{{investissement.name}} - {{investissement.type|upper}}</h2>

                <div class="col-auto ms-auto d-print-none">
                    <div class="btn-list">
                        <span class="d-none d-sm-inline">
                          <a href="#" class="btn btn-white">
                            Delete
                          </a>
                        </span>
                        <span class="d-none d-sm-inline">
                          <a href="#" class="btn btn-white">
                            Update
                          </a>
                        </span>
                        <a href="#" class="btn btn-primary d-none d-sm-inline-block" data-bs-toggle="modal" data-bs-target="#modal-report">
                            <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                            Add rows
                        </a>
                    </div>
                </div>




            </div>
            <div class="card-body">
                <p>Risk : {{investissement.risk}}</p>
                <p>Created : {{investissement.dateCreated|date("d/m/Y")}}</p>
                <p>Last add : {{investissement.lastModif|date("d/m/Y")}}</p>

                {% if investissement.totalValue == null %}
                    <p>Total value : 0 {{ investissement.devise }}
                        <a href="#">
                        Add rows
                        </a>
                    </p>
                {% else %}
                    <p>Total value : {{investissement.totalValue}}</p>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}

{% block title %}{{ parent() }} | Home{% endblock %}